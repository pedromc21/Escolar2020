@model Escolar2020.Web.Models.App_TutorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Tutor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Persona_Id" />
            <div class="form-group" hidden="hidden">
                <label asp-for="Persona_Id" class="control-label"></label>
                <input asp-for="Persona_Id" class="form-control" />
                <span asp-validation-for="Persona_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave_Familia" class="control-label"></label>
                <input asp-for="Clave_Familia" class="form-control" readonly="@(true)" />
                <span asp-validation-for="Clave_Familia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreTutor" class="control-label"></label>
                <input asp-for="NombreTutor" class="form-control" readonly="@(true)" />
                <span asp-validation-for="NombreTutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parentesco" class="control-label"></label>
                <input asp-for="Parentesco" class="form-control" readonly="@(true)" />
                <span asp-validation-for="Parentesco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_Nacimiento" class="control-label"></label>
                <input asp-for="Fecha_Nacimiento" class="form-control" readonly="@(true)" />
                <span asp-validation-for="Fecha_Nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profesion" class="control-label"></label>
                <input asp-for="Profesion" class="form-control" />
                <span asp-validation-for="Profesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Empresa" class="control-label"></label>
                <input asp-for="Nombre_Empresa" class="form-control" />
                <span asp-validation-for="Nombre_Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puesto_Empresa" class="control-label"></label>
                <input asp-for="Puesto_Empresa" class="form-control" />
                <span asp-validation-for="Puesto_Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono_Trabajo" class="control-label"></label>
                <input asp-for="Telefono_Trabajo" class="form-control" />
                <span asp-validation-for="Telefono_Trabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
