@model Escolar2020.Web.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Datos del Usuario</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group" hidden="hidden">
                <label asp-for="Persona_Id">Persona_Id</label>
                <input asp-for="Persona_Id" class="form-control" />
                <span asp-validation-for="Persona_Id" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave_Familia">Clave_Familia</label>
                <input asp-for="Clave_Familia" class="form-control" readonly="@(true)" />
                <span asp-validation-for="Clave_Familia" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario">Usuario</label>
                <input asp-for="Usuario" class="form-control" readonly="@(true)" />
                <span asp-validation-for="Usuario" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreUsuario">Nombre</label>
                <input asp-for="NombreUsuario" class="form-control" readonly="@(true)" />
                <span asp-validation-for="NombreUsuario" class="text-warning"></span>
            </div>
            <div class="form-group">
                <!--<input type="submit" value="Update" class="btn btn-primary" />-->
                <a asp-action="ChangePassword" class="btn btn-success">Cambiar mi contraseña</a>
            </div>
            <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


